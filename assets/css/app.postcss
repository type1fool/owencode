/* TailwindCSS */
@import "tailwindcss/base";
@import "tailwindcss/components";
@import "tailwindcss/utilities";

/* Pre-build CSS */
@import "./phoenix.postcss";
@import "./alerts.postcss";

@layer base {
  h1, h2, h3, h4, h5, h6 {
    @apply font-semibold text-gray-500;
  }
  
  h1 { @apply text-5xl; }
  h2 { @apply text-4xl; }
  h3 { @apply text-3xl; }
  h4 { @apply text-2xl; }
  h5 { @apply text-xl; }
  h6 { @apply text-lg font-bold; }
}